extends ../_layout
include ../_includes/link_mixin
block content
    div.heading
        span= question.title
        span
            +link('/admin/quizzes/'+question.quizId, 'Return to Quiz', 'fa-eye', 'link')
            +link('/admin/questions/edit/'+question.id, 'Edit', 'fa-edit', 'link')
            +link('/admin/questions/delete/'+question.id, 'Delete', 'fa-trash', 'link linkSecondary')
        
        div
            h2.headingSecondary Choices
            ul.list
                for choice in choices
                    li.list__item
                        span.list__item__title= choice.value
                        div.list__item__footer
                            +link('/admin/choices/'+choice.id, 'View', 'fa-eye', 'link')
                            +link('/admin/choices/edit/'+choice.id, 'Edit', 'fa-edit', 'link')
                            +link('/admin/choices/delete/'+choice.id, 'Delete', 'fa-trash', 'link linkSecondary')
            +link('/admin/choices/new/?questionId='+question.id, 'Add a new choice', '', 'button primary')